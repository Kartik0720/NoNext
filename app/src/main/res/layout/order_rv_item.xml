<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardElevation="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/OrdersProductImageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/logo"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/OrdersProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/OrdersProductImageView"
            android:text="Title"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/OrdersProductStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/OrdersProductTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/OrdersProductImageView"
            android:text="Price"
            android:textSize="16sp" />

        <!--<TextView
            android:id="@+id/productDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPrice"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/productImageView"
            android:text="Description"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="?android:textAppearanceLarge"/>-->
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>